<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="本将棋"
        android:textColor="#212121"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:text="画像"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="47dp" />

    <LinearLayout
        android:id="@+id/allMatchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-16dp" >
        <TextView
            android:id="@+id/allMatchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="対戦回数："/>
        <TextView
            android:id="@+id/allMatchEdit"
            android:text="ー"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/allRateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allMatchLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-16dp" >
        <TextView
            android:id="@+id/allRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="レート　："/>
        <TextView
            android:id="@+id/allRateEdit"
            android:text="ー"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/BlackTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="先手"
        android:textColor="#424242"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        tools:layout_editor_absoluteX="75dp" />

    <LinearLayout
        android:id="@+id/blackMatchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BlackTitleTextView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="39dp">
        <TextView
            android:id="@+id/blackMatchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="対戦回数："
            android:textColor="#616161" />
        <TextView
            android:id="@+id/blackMatchEdit"
            android:text="ー"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blackRateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackMatchLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/blackRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="レート　："
            android:textColor="#616161" />
        <TextView
            android:id="@+id/blackRateEdit"
            android:text="ー"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/whiteTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="後手"
        android:textColor="#424242"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackRateLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-16dp" />

    <LinearLayout
        android:id="@+id/whiteMatchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whiteTitleTextView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp">
        <TextView
            android:id="@+id/whiteMatchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="対戦回数：" />
        <TextView
            android:id="@+id/whiteMatchEdit"
            android:text="ー"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/whiteRateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whiteMatchLayout"
        app:layout_constraintVertical_bias="0.0" >
        <TextView
            android:id="@+id/whiteRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="レート　："/>
        <TextView
            android:id="@+id/whiteRateEdit"
            android:text="ー"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>